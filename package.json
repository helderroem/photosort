{
	"name": "photosort",
	"version": "1.0.0",
	"description": "a command line tool to sort photos by camera type and date taken",
	"bin": {
		"photosort": "./index.js"
	},
	"scripts": {
		"test": "run-s lint unit:report",
		"unit": "ava",
		"unit:snapshot": "run-s 'unit -- --update-snapshots'",
		"unit:watch": "run-s 'unit -- --watch'",
		"unit:report": "nyc ava",
		"lint": "standard",
		"start": "node --require reify index.js"
	},
	"keywords": [
		"exif",
		"photograph",
		"arrange"
	],
	"author": "Robin Marr <rob@marr.london>",
	"license": "ISC",
	"ava": {
		"snapshotDir": ".snapshots",
		"require": [
			"reify"
		]
	},
	"dependencies": {
		"chalk": "^2.4.1",
		"fast-glob": "^2.2.2",
		"fs-extra": "^7.0.0",
		"lodash.capitalize": "^4.2.1",
		"lodash.curry": "^4.1.1",
		"reify": "^0.17.2",
		"yargs": "^12.0.1"
	},
	"devDependencies": {
		"ava": "1.0.0-beta.6",
		"npm-run-all": "^4.1.3",
		"nyc": "^12.0.2",
		"sinon": "^6.1.5",
		"standard": "^11.0.1"
	}
}
